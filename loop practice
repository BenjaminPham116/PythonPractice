while count< len(my_string):
  if my_string[count] == "a" or my_string[count] == "e" or my_string[count] == "i" or my_string[count] == "o" or my_string[count] == "u":
      print "x"
  else:
    print my_string[count]
  count+=1
  


# Do Now Round 5
fruits_dictionary = {'c': 'berry','d': 'apple', 'a': 'cherry','b': 'banana'}
fruits_dictionary["e"]="?"
print fruits_dictionary
for key in fruits_dictionary:
  if fruits_dictionary[key] =="apple":
    print "found apple"
    print fruits_dictionary[key]
    break
  else:
    print "not an apple"
    print fruits_dictionary[key]
